datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Purchase {
  id           String   @id @default(cuid())
  email        String
  productSlug  String
  fullName     String?
  phone        String?
  type         String   // "ebook" or "course"
  createdAt    DateTime @default(now())
}


model EmailLog {
  id          String   @id @default(uuid())
  email       String
  product     String
  template    String   // 'freebie', 'ebook', etc.
  sentAt      DateTime @default(now())
}

model AiSession {
  id          String   @id @default(uuid())
  email       String?
  ip          String
  creditsUsed Int
  messages    Json     // store short log of messages
  createdAt   DateTime @default(now())
}